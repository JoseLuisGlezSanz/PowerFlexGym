schema {
    query: Query
    mutation: Mutation
}
type Query {
    getAll: [Fabric]
    getById(id:Int): Fabric
}
type Mutation {
    add(fabric:FabricDTO): Fabric
}
type Fabric {
    id: ID!
    composition: String!
    fabricType: fabricType
    weight: Float!
    price: Float!
}
type fabricType{
    id: ID!
    name: String
}
# Input types
input FabricDTO{
    id: ID!
    composition: String!
    fabricTypeId: Int!
    weight: Float!
    price: Float!
}